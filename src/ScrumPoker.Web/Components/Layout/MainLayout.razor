@using Microsoft.AspNetCore.Components.Sections
@inherits LayoutComponentBase
@inject NotificationService NotificationService

<RadzenComponents @rendermode="InteractiveServer" />

<RadzenLayout>
    <RadzenHeader>
        <div class="header">
            <div class="rz-col-7 bg-inner">
                <RadzenLink Path="/" Text=" ScrumPoker" Icon="filter_3" style="font-size:1.2rem;font-weight: bold;" />
                <SectionOutlet SectionName="header" @rendermode="InteractiveServer" />
            </div>
        </div>
    </RadzenHeader>
    <ErrorBoundary>
        <ChildContent>

            <RadzenBody>
                <div class="rz-display-flex rz-row rz-align-items-normal rz-justify-content-center rz-mx-auto">
                    <div class="rz-col-7">
                        @Body
                    </div>
                </div>
            </RadzenBody>
        </ChildContent>
        <ErrorContent>
            <p>An error occurred:</p>
            <p>@context.Message</p>
            @{
                NotificationService.Notify(new NotificationMessage
                {
                    Severity = NotificationSeverity.Error,
                    Summary = "Application Error",
                    Detail = $"An unexpected error occurred: {context.Message}"
                });
            }
        </ErrorContent>
    </ErrorBoundary>
</RadzenLayout>

<style>
    .header {
        height: 100%;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;

    }

    .bg-inner {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex: .6;
    }
</style>