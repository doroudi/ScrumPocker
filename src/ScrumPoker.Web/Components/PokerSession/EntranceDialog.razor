@namespace ScrumPoker.Components

<RadzenStack Gap="1.5rem">
    <RadzenTemplateForm TItem=EntranceModel Data=@model Submit=@Enter>
        <RadzenStack Orientation="Orientation.Vertical" Gap="0.5rem" AlignItems="AlignItems.Stretch"
            JustifyContent="JustifyContent.SpaceBetween">
            
            <RadzenFormField Text="Name">
                <ChildContent>
                    <RadzenTextBox Name="DisplayName" @bind-Value="@model.DisplayName" Style="width:100%" Placeholder="Name" />
                </ChildContent>
                <Helper>
                    <RadzenRequiredValidator Component="DisplayName" Text="Name is required." />
                </Helper>
            </RadzenFormField>

            <RadzenStack Orientation="Orientation.Horizontal">
                <RadzenButton Text="Enter" ButtonType="ButtonType.Submit" ButtonStyle="ButtonStyle.Success"
                    icon="arrow_forward" Style="width: 80px;" />
                <RadzenButton Text="Cancel" Click=@Cancel ButtonStyle="ButtonStyle.Light" />
            </RadzenStack>
        </RadzenStack>
    </RadzenTemplateForm>
</RadzenStack>
